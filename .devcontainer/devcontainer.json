{
  "name": "WorldCup Dev Container",
  "build": {
    "context": "..",
    "dockerfile": "../Dockerfile"
  },
  "workspaceFolder": "/workspaces/WorldCup",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/WorldCup,type=bind,consistency=cached",
  "runArgs": ["--init", "--network=host"],
  "remoteUser": "root",
  "customizations": {
    "vscode": {
        "settings": {
            "terminal.integrated.defaultProfile.linux": "bash",
            "go.gopath": "/go",
            "go.goroot": "/usr/local/go",
            "remote.autoForwardPorts": true
        },
        "extensions": [
          "golang.go"
        ]
    }
  },
  "forwardPorts": [],
  "postCreateCommand": "go version || true",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:HOME:+/}.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached"
  ]
}
